@page
@model CreateArticleModel
@{
    ViewData["Title"] = "ایجاد مقاله ";
}
<h1>@ViewData["Title"]</h1>

@if ( ViewData["Success"] != null)
{
	<div class="alert alert-success">
		@ViewData["Success"]
	</div>
}
@if ( ViewData["Error"] != null)
{
	<div class="alert alert-danger">
		@ViewData["Error"]
	</div>
}

<form class="mr-auto ml-auto" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Command.Name"></label>
            <input class="form-control" asp-for="@Model.Command.Name">
            <span asp-validation-for="@Model.Command.Name" class="text-danger"></span>
        </div>

         <div class="form-group col-md-6">
            <label asp-for="@Model.Command.Client"></label>
            <input class="form-control" asp-for="@Model.Command.Client">
        </div>

        <div class="form-group col-md-4">
            <label asp-for="@Model.Command.Image"></label>
            <input class="form-control" asp-for="@Model.Command.Image">
            <span asp-validation-for="@Model.Command.Image" class="text-danger"></span>
        </div>
       

        <div class="form-group col-md-4">
            <label asp-for="@Model.Command.PictureAlt"></label>
            <input class="form-control" asp-for="@Model.Command.PictureAlt">
        </div>
        <div class="form-group col-md-4">
            <label asp-for="@Model.Command.PictureTitle"></label>
            <input class="form-control" asp-for="@Model.Command.PictureTitle">
        </div>
        <div class="form-group col-md-12">
            <label asp-for="@Model.Command.ShortDiscription"></label>
            <textarea class="form-control" asp-for="@Model.Command.ShortDiscription"></textarea>
            <span asp-validation-for="@Model.Command.ShortDiscription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Command.Body"></label>
        <textarea rows="5" type="text" class="form-control" asp-for="@Model.Command.Body"></textarea>
    </div>
    <button type="submit" class="btn btn-success">ارسال</button>
</form>

