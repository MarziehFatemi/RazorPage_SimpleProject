@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="featured-section p-3 p-lg-5">
			<div class="container">
				<h2 class="section-title font-weight-bold mb-5">برخی پروژه ها</h2>
				<div class="row">

					@foreach(var item in @Model.Project)
					{
						<div class="col-md-6 mb-5">
						<div class="card project-card">
							<div class="row no-gutters">
								<div class="col-lg-4 card-img-holder">
									<img src="~/images/project/@item.Image" class="card-img" alt=@item.Image 
									title="@item.Name">
								</div>
								<div class="col-lg-8">
									<div class="card-body">
										<h5 class="card-title">
											<a asp-page="/ArticleDetails"   asp-route-id=@item.Id 
											class="theme-link"> 
												
											@item.Name</a>
											</h5>
											 
										<p class=" d-flex card-text">@item.ShortDiscription</p>
										
										<p class="card-text"><small class="text-muted">مشتری: @item.Client</small></p>
									
									 <a asp-page="/ArticleDetails" 
                                        asp-route-id="@item.Id" 
                                       class="btn btn-primary" >ادامه مطلب</a>

           
           
                                      <a asp-page-handler  ="Remove" asp-route-id="@item.Id" class="btn btn-danger"  >   حذف</a>

									</div>
								</div>
							</div>
						</div>
					</div>

					}
					
				
				</div>
			</div>
		</section>





