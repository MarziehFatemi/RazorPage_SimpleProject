@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="col-12 mb-3">
    <div class="row">
        <div class="border-bottom col-3 ml-auto mr-auto text-center">
            <h2> عنوان پروژه ها</h2>
        </div>
    </div>
</div>




    @foreach ( var Item in @Model.Project )
    {
        string name = @Item.Image + ".png"; 

        <div class="col-4 mb-2">
       
           <img src = "~/images/project/@name" />
       
        <div  class="card">
           <h5 class="card-title"> @Item.Name  </h5>
       
           <p class="card-text" > @Item.ShortDiscription  </p>
      
            <a asp-page="/ArticleDetails" 
                   asp-route-id="@Item.Id" 
                   class="btn btn-primary" >ادامه مطلب</a>

           
           
           <a asp-page-handler  ="Remove" asp-route-id="@Item.Id" class="btn btn-danger"  >   حذف</a>
       </div>
       </div>
    }

 
